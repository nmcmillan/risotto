<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Define Title Bar -->
	<style name="title_bar_style">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">40sp</item>
		<item name="android:background">#EE9241</item>
		<item name="android:layout_alignParentTop">true</item> 
	</style>
	
	<!-- Define title bar logo -->
	<style name="title_bar_logo_style">
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:background">#EE9241</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textSize">32sp</item>
		<item name="android:text">Pillbox</item>
	</style>
	
	<!-- Define title bar sync button -->
	<style name="button_title_bar_sync_style">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@null</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:textSize">25sp</item>
		<item name="android:fitsSystemWindows">true</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:text">Sync</item>
	</style>

    <!-- Row for wizard -->
    <style name="wizard_how_often_schedule_timer_row">
    	<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">45sp</item>	
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_weight">1</item>
	</style>
	
	<!-- Add item button -->
	<style name="button_add_item">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">45sp</item>
		<item name="android:background">#000</item>
		<item name="android:clickable">true</item>
	</style>
	
	<!-- Time for alarm  -->
	<style name="wizard_how_often_schedule_hour_display">
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:textSize">25sp</item>
		<item name="android:textColor">#000</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:clickable">true</item>
		<item name="android:background">#EE9242</item>
	</style>
</resources>
