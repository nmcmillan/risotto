<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="match_parent"
  	android:layout_height="match_parent">
  
  	<TextView android:id="@+id/prescription_add_patient_spinner_label"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:text="Who is this prescription subscribed to: "
  		android:textSize="15sp" />
  
	<Spinner android:id="@+id/prescription_add_patient_spinner"
    	android:scrollbarStyle="insideInset"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/prescription_add_patient_spinner_label"
    	android:prompt="@string/prescription_add_patient_selector_title" /> 
    	
    <EditText android:id="@+id/prescription_add_patient_first_name" 
    	android:selectAllOnFocus="true"
        android:singleLine="true"
        android:layout_width="wrap_content"
      	android:ems="25"
        android:layout_height="wrap_content"
        android:layout_below="@id/prescription_add_patient_spinner" 
        android:autoText="true"
        android:capitalize="sentences"
        android:scrollHorizontally="true" />
        
    <EditText android:id="@+id/prescription_add_patient_last_name" 
    	android:selectAllOnFocus="true"
        android:singleLine="true"
        android:layout_marginTop="2dip"
        android:layout_width="wrap_content"
        android:layout_below="@id/prescription_add_patient_first_name"
      	android:ems="25"
        android:layout_height="wrap_content" 
        android:autoText="true"
        android:capitalize="sentences"
        android:scrollHorizontally="true" /> 
        
    <TextView android:id="@+id/prescription_add_drug_spinner_label"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_below="@id/prescription_add_patient_last_name"
  		android:text="What medication is the prescription for: "
  		android:textSize="15sp" />
  
	<Spinner android:id="@+id/prescription_add_drug_spinner"
    	android:scrollbarStyle="insideInset"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/prescription_add_drug_spinner_label"
    	android:prompt="@string/prescription_add_drug_selector_title" /> 
    	
    <EditText android:id="@+id/prescription_add_drug_brand_name" 
    	android:selectAllOnFocus="true"
        android:singleLine="true"
        android:layout_width="wrap_content"
      	android:ems="25"
        android:layout_height="wrap_content"
        android:layout_below="@id/prescription_add_drug_spinner" 
        android:autoText="true"
        android:capitalize="sentences"
        android:scrollHorizontally="true" />
        
    <TextView android:id="@+id/prescription_add_drug_form" 
    	android:selectAllOnFocus="true"
        android:singleLine="true"
        android:layout_marginTop="2dip"
        android:layout_width="wrap_content"
        android:layout_below="@id/prescription_add_patient_first_name"
      	android:ems="25"
        android:layout_height="wrap_content" 
        android:autoText="true"
        android:capitalize="sentences"
        android:scrollHorizontally="true" />
        
    <Button android:id="@+id/button_prescription_add_ok"
    	android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_gravity="right"
        android:text="@string/button_ok_prescription_add" />
  
</RelativeLayout>
