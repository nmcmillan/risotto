<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView
        android:id="@+id/prescription_list_view_patient_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/prescription_list_view_patient_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prescription_list_view_patient_first_name"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/prescription_list_view_drug_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        />    
    <LinearLayout
    	android:id="@+id/prescription_list_view_times"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_weight="1">
	    <TextView
	        android:text="Time 1"
	        android:textSize="15sp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"/>
	    <TextView
	        android:text="Time 2"
	        android:textSize="15sp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"/>
    </LinearLayout>
      
</RelativeLayout>

