<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  
  	<EditText android:id="@+id/patient_add_field_first_name" 
    	android:selectAllOnFocus="true"
        android:singleLine="true"
        android:layout_width="wrap_content"
      	android:ems="25"
        android:layout_height="wrap_content" 
        android:autoText="true"
        android:capitalize="sentences"
        android:scrollHorizontally="true" />
        
    <EditText android:id="@+id/patient_add_field_last_name" 
    	android:selectAllOnFocus="true"
        android:singleLine="true"
        android:layout_marginTop="2dip"
        android:layout_width="wrap_content"
      	android:ems="25"
        android:layout_height="wrap_content"
        android:layout_below="@id/patient_add_field_first_name" 
        android:autoText="true"
        android:capitalize="sentences"
        android:scrollHorizontally="true" />
        	
    <Button android:id="@+id/patient_add_button_ok"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_below="@id/patient_add_field_last_name"
        android:layout_alignRight="@id/patient_add_field_last_name"
        android:text="@string/patient_add_button_string" />
  
</RelativeLayout>
