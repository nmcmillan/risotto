<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:text="@string/drug_edit_title"
  android:id="@+id/drug_details_layout"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  
  <TextView
  	android:id="@+id/drug_details_drug_name"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	/>
  	
  <TextView
  	android:id="@+id/drug_details_drug_strength"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:layout_below="@id/drug_details_drug_name"
  	/>
 
  
</RelativeLayout>
